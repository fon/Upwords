<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
android:orientation="vertical"
android:id="@+id/widget"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@layout/customshape"
xmlns:android="http://schemas.android.com/apk/res/android">

<TextView
android:id="@+id/widget35"
android:layout_width="wrap_content"
android:layout_height="wrap_content"/>

<TextView
android:id="@+id/poptext"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/switch_message"
android:textColor="#000000"
android:layout_gravity="center_horizontal"
>
</TextView>

<TextView
android:id="@+id/widget35"
android:layout_width="wrap_content"
android:layout_height="wrap_content"/>

<Button 
android:layout_height="wrap_content" 
android:focusable="true" android:layout_width="wrap_content" 
android:id="@+id/cancel_popup" android:text="@string/cancel" 
android:enabled="true" 
android:clickable="true"
android:layout_gravity="center_horizontal"
/>


</LinearLayout>
